<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F9F9"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar"
            android:layout_width="408dp"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:titleTextColor="#E9F9F9"
            tools:layout_editor_absoluteY="4dp" />

        <?xml version="1.0" encoding="utf-8"?>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <EditText
                android:id="@+id/editTextTextMultiLine2"
                android:layout_width="305dp"
                android:layout_height="84dp"
                android:background="#C8DBE9"
                android:backgroundTint="#C8DBE9"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="1161dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="151dp"
                android:layout_height="30dp"
                android:text="Contact Details"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="1115dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="151dp"
                android:layout_height="30dp"
                android:text="Your Location"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="1004dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="926dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose options below to post an ad "
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="98dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose File to upload"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="211dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the book"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="434dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author Name"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="518dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="616dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="777dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="250dp"
                android:layout_height="36dp"
                android:text="Condition of the book"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="886dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barter"
                android:textColor="#5163A0"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="295dp"
                tools:layout_editor_absoluteY="777dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="57dp"
                android:layout_height="54dp"
                android:text="OR"
                android:textColor="#5163A0"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="794dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="140dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Inside text input layout add
                      an auto complete text view
                        and make its input type to none-->

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView2"
                    android:layout_width="342dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:text="Select category" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="209dp"
                android:layout_height="148dp"
                app:srcCompat="@drawable/download"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="258dp" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="315dp"
                android:layout_height="37dp"
                android:background="#C8DBE9"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="468dp" />

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="315dp"
                android:layout_height="37dp"
                android:background="#C8DBE9"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="554dp" />

            <EditText
                android:id="@+id/editTextTextPersonName8"
                android:layout_width="315dp"
                android:layout_height="37dp"
                android:background="#C8DBE9"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="1052dp" />

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="315dp"
                android:layout_height="80dp"
                android:background="#C8DBE9"
                android:backgroundTint="#C8DBE9"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="660dp" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="103dp"
                android:layout_height="27dp"
                android:background="#C8DBE9"
                android:ems="10"
                android:inputType="number"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="819dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="308dp"
                tools:layout_editor_absoluteY="800dp" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="74dp"
                android:layout_height="57dp"
                android:text="Best"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="922dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="74dp"
                android:layout_height="57dp"
                android:text="Good"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="922dp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="74dp"
                android:layout_height="57dp"
                android:text="Fair"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="922dp" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="129dp"
                android:layout_height="55dp"
                android:text="Average"
                tools:layout_editor_absoluteX="233dp"
                tools:layout_editor_absoluteY="922dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Ad"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="1293dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post a New Ad"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="203dp"
                tools:layout_editor_absoluteY="138dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>