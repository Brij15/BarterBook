<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F0FA"
    tools:context=".LoginPageActivity">

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:background="#3F4F94"
        android:text="Log In"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:textColor="#3F4F94"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPasswordLogin" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="24dp"
        android:layout_height="57dp"
        android:gravity="center"
        android:text="Or"
        android:textAlignment="center"
        android:textColor="#3F4F94"
        app:layout_constraintBottom_toTopOf="@+id/textViewSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />

    <TextView
        android:id="@+id/textViewSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contextClickable="true"
        android:text="Not a User Sign Up Here!"
        android:textAlignment="center"
        android:textColor="#3F4F94"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textViewAlternateLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Or Sign Up Using"
        android:textAlignment="center"
        android:textColor="#3F4F94"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignup" />

    <EditText
        android:id="@+id/userEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:backgroundTint="#4F6168"
        android:ems="10"
        android:foregroundTint="#4BB5E4"
        android:hint="EmailAddress"
        android:inputType="textPersonName"
        android:shadowColor="#A1C7D5"
        android:textAlignment="center"
        android:textColor="#3F4F94"
        android:textColorHint="#3F4F94"
        app:layout_constraintBottom_toTopOf="@+id/userPasswordLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/userPasswordLogin"
        android:layout_width="205dp"
        android:layout_height="57dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#3F4F94"
        android:textColorHint="#3F4F94"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userEmailLogin" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="289dp"
        android:layout_height="57dp"
        android:text="WELCOME TO BARTER BOOKS"
        android:textAlignment="center"
        android:textColor="#3F4F94"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userEmailLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="282dp"
        android:layout_height="194dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlternateLogin"
        android:layout_marginBottom="50dp">


        <ImageView
            android:id="@+id/googleSignIn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/google_continue" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>