<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barterbooksapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/applogo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.BarterBooksApp">
        <activity
            android:name=".EditUserActivity"
            android:exported="false" />
        <activity
            android:name=".PostAdActivity"
            android:exported="false" />
        <activity
            android:name=".AboutUsScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginPageActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LocationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CategoriesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistrationScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="Home"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SellerListActivity"
            android:exported="false"
            android:label="SellerList"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />
    </application>

</manifest>